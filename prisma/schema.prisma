generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  roles    Role[]
}

model Role {
  id    String @id @default(uuid())
  value String @unique
  Users User[]
}
